<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sand">

    <TextView
        android:id="@+id/tvcashup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_baseline_monetization_on_24"
        android:text="CashUp"
        android:textColor="@color/green"
        android:textSize="40dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvcashup"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:text="E-wallet"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TableLayout
        android:id="@+id/tabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcashup"
        android:background="@color/green"
        android:stretchColumns="1">
        <TableRow>
            <Button
                android:id="@+id/btnback"
                android:background="@color/green"
                android:text="back"
                android:textColor="@color/white"
                android:textSize="10pt"
                android:gravity="right|center_vertical"
                android:paddingTop="10dp"/>
            <Button
                android:id="@+id/btnlogout"
                android:background="@color/white"
                android:text="log out"
                android:textColor="@color/white"
                android:layout_marginLeft="170dp"
                android:textSize="10pt"
                android:gravity="right|center_vertical"
                android:paddingTop="10dp"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tabel">
        <TextView
            android:id="@+id/tvvalidasi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="VALIDATION"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12pt"/>
        <TableLayout
            android:id="@+id/tbvalidasi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Email tujuan"/>
                <TextView
                    android:text=":"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/tvemailvalid"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"/>

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Nama penerima"/>
                <TextView
                    android:text=":"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/tvnamavalid"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"/>

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Nominal"/>
                <TextView
                    android:text=":"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/tvnominalvalid"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"/>

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Info"/>
                <TextView
                    android:text=":"
                    android:layout_marginLeft="30dp"/>
                <TextView
                    android:id="@+id/tvketvalid"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"/>

            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="PIN"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:text=":"
                    android:layout_marginLeft="30dp"/>

                <EditText
                    android:id="@+id/etpassvalid"
                    android:layout_width="217dp"
                    android:layout_marginLeft="20dp"
                    android:inputType="textPassword"
                    android:textColor="@color/white" />

            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnlanjutvalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Next" />
    </LinearLayout>
    <TextView
        android:id="@+id/pinvalid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</RelativeLayout>