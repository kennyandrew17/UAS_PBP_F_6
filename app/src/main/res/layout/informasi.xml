<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sand">
    <TextView
        android:id="@+id/tvcashup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CashUp"
        android:drawableRight="@drawable/ic_baseline_monetization_on_24"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/green"
        android:textSize="40dp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvcashup"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:text="E-wallet"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TableLayout
        android:id="@+id/tabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcashup"
        android:background="@color/green"
        android:stretchColumns="1">
        <TableRow>
            <Button
                android:id="@+id/btnback1"
                android:background="@color/white"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="10pt"
                android:gravity="right|center_vertical"
                android:paddingTop="10dp"/>
            <Button
                android:id="@+id/btnlogout1"
                android:background="@color/white"
                android:text="Log out"
                android:textColor="@color/white"
                android:layout_marginLeft="170dp"
                android:textSize="10pt"
                android:gravity="right|center_vertical"
                android:paddingTop="10dp"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_below="@+id/tabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Spinner
        android:id="@+id/spin1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"/>
        <TableLayout
            android:id="@+id/tabelinfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Nama"
                    android:textColor="@color/purple_500"
                    android:layout_width="50dp"/>
                <TextView
                    android:text=":"
                    android:layout_marginLeft="60dp"/>

                <TextView
                    android:id="@+id/namainfo"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/purple_500" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="No Telp"
                    android:textColor="@color/purple_500"
                    android:layout_width="50dp"/>
                <TextView
                    android:text=":"
                    android:layout_marginLeft="60dp"/>

                <TextView
                    android:id="@+id/notelpinfo"
                    android:text=""
                    android:textColor="@color/purple_500"/>
            </TableRow>

        </TableLayout>
        <TableLayout
            android:id="@+id/tabelinfo2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="SALDO"
                    android:textColor="@color/purple_500"
                    android:layout_width="50dp"/>
                <TextView
                    android:text=":"
                    android:layout_marginLeft="60dp"/>
                <TextView
                    android:id="@+id/saldoinfo"
                    android:text=""
                    android:textColor="@color/purple_500"/>
            </TableRow>

        </TableLayout>
        <TableLayout
            android:id="@+id/tabelinfo3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Email"
                    android:textColor="@color/purple_500"
                    android:layout_width="50dp"/>
                <TextView
                    android:text=":"
                    android:layout_marginLeft="60dp"/>
                <TextView
                    android:id="@+id/emailinfo"
                    android:text=""
                    android:textColor="@color/purple_500"/>
            </TableRow>

        </TableLayout>
</LinearLayout>
</RelativeLayout>