<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sand">

    <TextView
        android:id="@+id/tvcashup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_baseline_monetization_on_24"
        android:text="CashUp"
        android:textColor="@color/green"
        android:textSize="40dp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvcashup"
        android:layout_alignParentRight="true"
        android:layout_marginRight="22dp"
        android:text="E-wallet"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TableLayout
        android:id="@+id/tabel"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tvcashup"
        android:background="@color/green"
        android:stretchColumns="1">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200">
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnback"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:gravity="right|center_vertical"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="10pt"/>
            <Button
                android:id="@+id/btnlogout"
                android:background="@color/white"
                android:layout_marginLeft="170dp"
                android:text="log out"
                android:textColor="@color/white"
                android:textSize="10pt"
                android:gravity="right|center_vertical"
                />
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/tabel2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabel"
        android:background="@color/green">
            <TextView
                android:text="TRANSFER"
                android:textAlignment="center"
                android:background="@color/sand"
                android:textSize="12pt"
                android:textColor="@color/black"/>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Email Penerima            :"/>

            <EditText
                android:id="@+id/tvemailpenerimatransfer"
                android:layout_width="244dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white" />

        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Nama Tujuan                 :"/>
            <EditText
                android:id="@+id/tvnamatransfer"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"/>

        </TableRow>
        <TableLayout
            android:id="@+id/tabel3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tabel2"
            android:background="@color/green"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Nominal"/>
            <EditText
                android:id="@+id/tvnominaltransfer"/>
            <TextView
                android:text="Catatan"/>
            <EditText
                android:id="@+id/tvkettransfer"/>

        </TableLayout>

    </TableLayout>

    <Button
        android:id="@+id/btnlanjuttransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginTop="450dp"
        android:text="Next" />

</RelativeLayout>